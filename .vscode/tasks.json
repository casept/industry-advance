{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "kill emulator",
            "type": "shell",
            "command": "killall mgba"
        },
        {
            "label": "run GDB server",
            "type": "shell",
            "isBackground": false,
            "linux": {
                "command": "(/usr/bin/mgba-qt -g ${workspaceRoot}/target/thumbv4-none-agb/debug/industry-advance &) && sleep 5 && echo $?"
            },
            "command": "debuggerReady",
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*debuggerReady.*$",
                    "endsPattern": "^.*debuggerReady.*$"
                },
                "pattern": {
                    "regexp": ""
                }
            }
        },
        {
            "label": "debugRun",
            "type": "shell",
            "command": "mgba-qt -g ${workspaceRoot}/target/thumbv4-none-agb/debug/industry-advance",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debugKill",
            "type": "process",
            "command": "${input:terminate}"
        }
    ],
    "inputs":
        [{
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": {"label": "debugRun"}
        }]
    
}