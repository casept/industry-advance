{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "kill emulator",
            "type": "shell",
            "command": "killall mgba-qt"
        },
        {
            "label": "run GDB server",
            "type": "shell",
            "isBackground": false,
            "linux": {
                "command": "cargo make build-debug && (nohup mgba-qt --log-level=15 -g ${workspaceRoot}/target/thumbv4-none-agb/debug/industry-advance &) && sleep 5 && echo $?"
            },
            "command": "debuggerReady",
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*debuggerReady.*$",
                    "endsPattern": "^.*debuggerReady.*$"
                },
                "pattern": {
                    "regexp": ""
                }
            }
        },
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": {
                "label": "debugRun"
            }
        }
    ]
}